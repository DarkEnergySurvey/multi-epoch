label = query_tileinfo,test 

pipeline = me # used in desstat output 
pipeprod = Y2ME # eups meta package name
pipever = 1.0+0E # eups meta package version
ops_run_dir = ${project}/${pipeline}/${tilename}-r${reqnum}/p${attnum:2}
